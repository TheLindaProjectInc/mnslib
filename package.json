{
    "name": "@metrixnames/mnslib",
    "version": "2.0.2-alpha",
    "description": "Library for interacting with the Metrix Name Service",
    "repository": "TheLindaProjectInc/mnslib",
    "source": "src/index.ts",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*",
        "README.md"
    ],
    "directories": {
        "lib": "./lib",
        "src": "./src",
        "test": "./src"
    },
    "engines": {
        "npm": ">=6.0.0",
        "node": ">=14.0.0"
    },
    "scripts": {
        "test": "mocha --config mocharc.json",
        "coverage": "nyc --reporter=json-summary npm run test",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"**/*.+(js|ts|json)\"",
        "build": "tsc",
        "doc": "npx typedoc src"
    },
    "nyc": {
        "include": [
            "src"
        ],
        "exclude": [
            "**/*.spec.*",
            "coverage"
        ],
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "check-coverage": true
    },
    "author": "SeqSEE",
    "license": "MIT",
    "homepage": "https://thelindaprojectinc.github.io/mnslib/index.html",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/locks": "^0.2.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.4",
        "@types/node-fetch": "^2.6.1",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "assert": "^2.0.0",
        "eslint": "^8.15.0",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "prettier": "^2.6.2",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.8.0",
        "typedoc": "^0.23.7",
        "typescript": "4.7.4"
    },
    "dependencies": {
        "@ensdomains/address-encoder": "^0.2.18",
        "@metrixcoin/metrilib": "^1.2.1-alpha",
        "bs58": "^5.0.0",
        "content-hash": "^2.5.2",
        "ethers": "^5.6.5",
        "locks": "^0.2.2",
        "node-fetch": "^2.6.1"
    }
}
